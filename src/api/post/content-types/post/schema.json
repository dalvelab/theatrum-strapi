{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "source": {
      "type": "component",
      "repeatable": false,
      "component": "news.source"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "info",
        "press"
      ],
      "default": "info",
      "required": true
    },
    "meta": {
      "type": "component",
      "repeatable": false,
      "component": "seo.seo"
    },
    "slug": {
      "type": "string"
    }
  }
}
