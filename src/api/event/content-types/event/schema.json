{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "age_limit": {
      "type": "integer",
      "required": true
    },
    "premiere": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "pushkin_card": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "banner": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "production_team": {
      "type": "component",
      "repeatable": true,
      "component": "event.role"
    },
    "roles": {
      "type": "component",
      "repeatable": true,
      "component": "event.role"
    },
    "slug": {
      "type": "string",
      "unique": false
    },
    "small_description": {
      "type": "text",
      "maxLength": 150,
      "required": true
    },
    "properties": {
      "type": "richtext"
    },
    "meta": {
      "type": "component",
      "repeatable": false,
      "component": "seo.seo"
    }
  }
}
